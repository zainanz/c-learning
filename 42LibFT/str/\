#include "libft.h"

void	*ft_memmove (void *destination, const void *source, size_t num)
{
	char 	cpy[num];
	int	i;

	if (ft_strlen((char *)destination) > num || ft_strlen((char *)source) > num)
		return (NULL);
	i = 0;
	ft_strncpy(cpy, source, num);
	while (i < num)
	{
		(char *)destination[i] = ((char *)cpy)[i];
		i++;
	}
	return (destination);
}
#include <stdio.h>
#include <string.h>

int main ()
{
  char str[] = "memmove can be very useful......";
  ft_memmove (str+20,str+15,11);
  puts (str);
  return 0;
}
